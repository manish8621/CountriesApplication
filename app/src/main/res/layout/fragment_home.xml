<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.mk.countries.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".view.fragments.HomeFragment">

        <EditText
            android:id="@+id/search_et"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/roboto_mono_medium"
            android:hint="@string/search"

            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toStartOf="@id/search_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/all"
            android:autofillHints="all,india" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            style="@style/titleText"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto_mono_medium"

            android:text="@string/search"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/search_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_et"
            app:layout_constraintTop_toTopOf="@+id/search_et" />

        <!--weather-->
        <ImageView
            android:id="@+id/weather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/left_round_corner"
            android:layout_marginTop="16dp"
            android:src="@color/light_blue"
            app:layout_constraintEnd_toStartOf="@+id/current_city_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_et"
            android:contentDescription="@string/weather_image" />

        <TextView
            android:id="@+id/current_city_tv"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#e0e0e0"
            android:text="Mumbai"

            app:layout_constraintBottom_toBottomOf="@+id/weather"
            app:layout_constraintEnd_toStartOf="@+id/air_quality_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/weather"
            app:layout_constraintTop_toTopOf="@+id/weather" />

        <TextView
            android:id="@+id/air_quality_tv"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/right_round_corner"
            android:text="air quality 123 %"
            app:layout_constraintBottom_toBottomOf="@+id/current_city_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/current_city_tv"
            app:layout_constraintTop_toTopOf="@+id/current_city_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:padding="5dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_city_tv"
            tools:itemCount="20"
            tools:listitem="@layout/country_list_item"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>