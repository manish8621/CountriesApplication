<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_layout">

    <data>
        <variable
            name="viewModel"
            type="com.mk.countries.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:context=".view.fragments.HomeFragment">

        <SearchView
            android:id="@+id/search_v"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_rectangle_bg"
            android:iconifiedByDefault="false"
            android:queryBackground="@color/transparent"
            android:queryHint="search"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search_et"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:autofillHints="all,india"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/roboto_mono_medium"
            android:hint="@string/search"
            android:visibility="gone"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toStartOf="@id/search_btn"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/search_btn"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/roboto_mono_medium"
            android:visibility="gone"
            android:text="@string/search"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/search_et"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/search_et"
            app:layout_constraintTop_toTopOf="@+id/search_et" />

        <!--weather-->
        <ImageView
            android:id="@+id/weatherIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/left_round_corner"
            android:contentDescription="@string/weather_image"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/location"
            app:layout_constraintEnd_toStartOf="@+id/current_city_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/search_v" />

        <TextView
            android:id="@+id/current_city_tv"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#e0e0e0"
            android:text="City"

            app:layout_constraintBottom_toBottomOf="@+id/weatherIv"
            app:layout_constraintEnd_toStartOf="@+id/air_quality_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/weatherIv"
            app:layout_constraintTop_toTopOf="@+id/weatherIv" />

        <TextView
            android:id="@+id/air_quality_tv"
            style="@style/titleText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/right_round_corner"
            android:gravity="center"
            android:text="AQI"
            app:layout_constraintBottom_toBottomOf="@+id/current_city_tv"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/current_city_tv"
            app:layout_constraintTop_toTopOf="@+id/current_city_tv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="0dp"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/current_city_tv"
            app:spanCount="2"
            tools:itemCount="20"
            tools:listitem="@layout/country_list_item" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/loading"
            android:src="@drawable/loading_animation"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="@+id/recycler_view"
            app:visiblityStatus="@{viewModel.isLoading}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>